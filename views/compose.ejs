<%- include('partials/header.ejs') %>
<div style="margin: 100px auto;">
    <h1 class="fonts">Compose</h1>

    <form action="/compose" method="post" encType="multipart/form-data" >
        <div class="form-group">
            <label for="inputsm">Title</label>
            <input class="form-control input-sm" id="inputsm" type="text" name="title" autocomplete="off" required autofocus>
        </div>
    
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Post</label>
            <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
            <!-- <input type="file" name="foo"> -->
        </div><br>
        <input class="btn btn-primary" type="submit" value="publish" name="publish">
    </form>
    
</div>

